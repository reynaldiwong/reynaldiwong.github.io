---
import "../styles.css";
import Nav from "../components/Nav.astro";
import YearStamp from "../components/YearStamp.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <main class="page">
      <header class="hero">
        <div class="hero-content">
          <p class="eyebrow"><strong>Reynaldiwong</strong></p>
          <slot name="hero" />
        </div>
        <Nav />
      </header>
      <slot />
      <footer class="footer">
        <span>&copy; <YearStamp /> | reynaldiwong</span>
      </footer>
    </main>
  </body>
</html>
