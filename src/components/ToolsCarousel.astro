---
const tools = [
  {
    name: "Jenkins",
    image: "/carousel/jenkins.png",
    url: "https://www.jenkins.io/"
  },
  {
    name: "Kubernetes",
    image: "/carousel/kubernetes.png",
    url: "https://kubernetes.io/"
  },
  {
    name: "Docker",
    image: "/carousel/docker.png",
    url: "https://www.docker.com/"
  },
  {
    name: "n8n",
    image: "/carousel/n8n.png",
    url: "https://n8n.io/"
  },
  {
    name: "GCP",
    image: "/carousel/gcp.png",
    url: "https://cloud.google.com/"
  },
  {
    name: "Ansible",
    image: "/carousel/ansible.png",
    url: "https://www.ansible.com/"
  },
  {
    name: "ArgoCD",
    image: "/carousel/argocd.png",
    url: "https://argo-cd.readthedocs.io/"
  },
  {
    name: "SonarQube",
    image: "/carousel/sonarqube.png",
    url: "https://www.sonarqube.org/"
  },
  {
    name: "Python",
    image: "/carousel/python.png",
    url: "https://www.python.org/"
  },
];

const itemsPerCol = Math.ceil(tools.length / 3);
const row1 = tools.slice(0, itemsPerCol);
const row2 = tools.slice(itemsPerCol, itemsPerCol * 2);
const row3 = tools.slice(itemsPerCol * 2);

// Create a repeated list for each row to ensure enough scrolling content
// We repeat 2 times for the "content" block, then duplicate it in JSX for seamless scrolling
const createRowContent = (rowTools) => [...rowTools, ...rowTools];

const rows = [
  { content: createRowContent(row1), direction: 'scroll-left' },
  { content: createRowContent(row2), direction: 'scroll-right' },
  { content: createRowContent(row3), direction: 'scroll-left' }
];

const allToolsContent = createRowContent(tools);
---

<div class="carousel-wrapper desktop-view">
  {rows.map((row) => (
    <div class="carousel-container">
      <div class={`tools-track ${row.direction}`}>
        {/* Original */}
        {row.content.map(tool => (
          <a href={tool.url} target="_blank" rel="noopener noreferrer" class="tool-link">
            <div class="tool-icon" title={tool.name}>
              <img src={tool.image} alt={tool.name} class="tool-img" />
              <span class="tool-name">{tool.name}</span>
            </div>
          </a>
        ))}
        {/* Duplicate for seamless scroll */}
        {row.content.map(tool => (
          <a href={tool.url} target="_blank" rel="noopener noreferrer" class="tool-link">
            <div class="tool-icon" title={tool.name}>
              <img src={tool.image} alt={tool.name} class="tool-img" />
              <span class="tool-name">{tool.name}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  ))}
</div>

<div class="carousel-wrapper mobile-view">
  <div class="carousel-container">
    <div class="tools-track scroll-left">
      {/* Original */}
      {allToolsContent.map(tool => (
        <a href={tool.url} target="_blank" rel="noopener noreferrer" class="tool-link">
          <div class="tool-icon" title={tool.name}>
            <img src={tool.image} alt={tool.name} class="tool-img" />
            <span class="tool-name">{tool.name}</span>
          </div>
        </a>
      ))}
      {/* Duplicate for seamless scroll */}
      {allToolsContent.map(tool => (
        <a href={tool.url} target="_blank" rel="noopener noreferrer" class="tool-link">
          <div class="tool-icon" title={tool.name}>
            <img src={tool.image} alt={tool.name} class="tool-img" />
            <span class="tool-name">{tool.name}</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .desktop-view {
    display: flex;
  }
  
  .mobile-view {
    display: none;
  }
  
  @media (max-width: 768px) {
    .desktop-view {
      display: none;
    }
    .mobile-view {
      display: flex;
    }
    .scroll-left, .scroll-right {
      animation-duration: 60s;
    }
    .carousel-wrapper {
      max-width: 100%;
    }
  }

  .carousel-wrapper {
    flex-direction: column;
    gap: 2rem;
    width: 100%;
    max-width: 300px;
    margin-top: 2rem;
  }

  .carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    mask-image: linear-gradient(to right, transparent, black 10%, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 95%, transparent);
  }

  .tools-track {
    display: flex;
    width: fit-content;
    padding: 0.5rem 0;
  }

  .scroll-left {
    animation: scrollLeft 40s linear infinite;
  }

  .scroll-right {
    animation: scrollRight 40s linear infinite;
  }

  .tools-track:hover {
    animation-play-state: paused;
  }

  @keyframes scrollLeft {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes scrollRight {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  .tool-link {
    text-decoration: none;
    color: inherit;
    display: block;
    cursor: pointer;
  }

  .tool-icon {
    flex: 0 0 auto;
    margin: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--secondary-text);
    transition: color 0.3s ease, transform 0.3s ease;
    opacity: 0.8;
  }

  .tool-icon:hover {
    color: var(--primary-color);
    opacity: 1;
    transform: translateY(-2px);
  }

  .tool-svg {
    width: 88px;
    height: 88px;
    fill: currentColor;
    margin-bottom: 0.5rem;
  }

  .tool-img {
    width: 88px;
    height: 88px;
    object-fit: contain;
    margin-bottom: 0.5rem;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .tool-icon:hover .tool-img {
    filter: grayscale(0%);
  }

  .tool-name {
    font-size: 1.2rem;
    font-weight: 500;
  }
</style>