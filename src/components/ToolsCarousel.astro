  <!-- Row 1 -->
  <div class="carousel-container">
    <div class="tools-track scroll-left">
      {row1Content.map(tool => (
        <a href={tool.url} target="_blank" rel="noopener noreferrer" class="tool-link">
          <div class="tool-icon" title={tool.name}>
            {tool.image ? (
              <img src={tool.image} alt={tool.name} class="tool-img" />
            ) : (
              <svg viewBox="0 0 24 24" class="tool-svg" xmlns="http://www.w3.org/2000/svg">
