---
import BaseLayout from '../layouts/BaseLayout.astro';
import { roadmapData } from '../data/roadmap';

---

<BaseLayout title="DevOps Roadmap" description="My journey and roadmap to DevOps mastery">
  <section class="roadmap-container animate-load">
    <div class="header-container">
        <h1 class="section-heading">DevOps Roadmap</h1>
        <a href="/" class="back-link">← Back to Home</a>
    </div>

    <div class="timeline">
      {roadmapData.map((phase, index) => (
        <div class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h2 class="phase-title">{phase.phase}</h2>
            <p class="phase-desc">{phase.description}</p>
            
            <div class="nodes-grid">
              {phase.nodes.map((node) => (
                node.link ? (
                  <a href={node.link} class={`node-card ${node.status} clickable`}>
                    <span class="node-status-indicator"></span>
                    <span class="node-name">{node.name}</span>
                    <span class="node-arrow">→</span>
                  </a>
                ) : (
                  <div class={`node-card ${node.status}`}>
                    <span class="node-status-indicator"></span>
                    <span class="node-name">{node.name}</span>
                  </div>
                )
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .roadmap-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1rem;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 4rem;
  }

  .section-heading {
    font-size: 2.5rem;
    margin: 0;
    color: #fff;
  }

  .back-link {
    color: var(--secondary-text, #888);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }
  .back-link:hover {
    color: #fff;
  }

  /* Timeline Styles */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 10px;
    bottom: 0;
    width: 2px;
    background: rgba(255, 255, 255, 0.1);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 4rem;
  }

  .timeline-marker {
    position: absolute;
    left: -2.05rem; /* Adjust based on padding-left of timeline */
    top: 0.5rem;
    width: 16px;
    height: 16px;
    background: var(--bg-color, #111);
    border: 2px solid var(--primary-color, #64b5f6);
    border-radius: 50%;
    z-index: 1;
    box-shadow: 0 0 10px rgba(100, 181, 246, 0.3);
  }

  .phase-title {
    font-size: 1.5rem;
    color: var(--primary-color, #64b5f6);
    margin: 0 0 0.5rem 0;
  }

  .phase-desc {
    color: var(--secondary-text, #888);
    margin: 0 0 1.5rem 0;
    font-size: 0.95rem;
  }

  .nodes-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .node-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1.25rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 140px;
    transition: all 0.2s ease;
    text-decoration: none;
    color: #e0e0e0;
    position: relative;
    overflow: hidden;
  }

  .node-card.clickable {
    cursor: pointer;
    border-color: rgba(100, 181, 246, 0.3);
  }

  .node-card.clickable:hover {
    background: rgba(100, 181, 246, 0.1);
    transform: translateY(-2px);
    border-color: var(--primary-color, #64b5f6);
  }

  .node-status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .node-card.completed .node-status-indicator {
    background-color: #4caf50;
    box-shadow: 0 0 8px rgba(76, 175, 80, 0.4);
  }

  .node-card.in-progress .node-status-indicator {
    background-color: #ff9800;
    box-shadow: 0 0 8px rgba(255, 152, 0, 0.4);
  }

  .node-card.planned .node-status-indicator {
    background-color: #9e9e9e;
  }

  .node-name {
    font-weight: 500;
    font-size: 0.95rem;
  }

  .node-arrow {
    margin-left: auto;
    opacity: 0;
    transform: translateX(-5px);
    transition: all 0.2s;
    color: var(--primary-color, #64b5f6);
  }

  .node-card.clickable:hover .node-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 600px) {
    .timeline {
      padding-left: 1.5rem;
    }
    
    .timeline-marker {
      left: -1.55rem;
    }

    .nodes-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
    
    .node-card {
      width: 100%;
    }
  }
</style>
