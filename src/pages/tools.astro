---
import BaseLayout from "../layouts/BaseLayout.astro";
import JsonTools from "../components/JsonTools";
import DnsLookup from "../components/DnsLookup";
import SSLChecker from "../components/SSLChecker";
import { content } from "../data/content";

const { tools } = content;
---

<BaseLayout
  title={tools.title}
  description={tools.description}
>
  <p class="tagline">
    {tools.tagline}
  </p>
  <a href="/" class="tools-link-card delay-400" style="margin-bottom: 2rem;">
    <div style="display: flex; align-items: baseline; flex-wrap: wrap;">
      <span class="tools-link-title">Home</span>
      <span class="tools-link-desc">Return to homepage</span>
    </div>
    <span class="tools-link-arrow">â†’</span>
  </a>
  <div class="tools-vertical">
    <section class="tool-item animate-left">
      <DnsLookup client:load />
    </section>
    
    <hr class="tool-separator" />
    
    <section class="tool-item animate-right">
      <SSLChecker client:load />
    </section>
    
    <hr class="tool-separator" />
    
    <section class="tool-item animate-left">
      <JsonTools client:load />
    </section>
  </div>
</BaseLayout>
