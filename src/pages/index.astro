---
import BaseLayout from "../layouts/BaseLayout.astro";
import ExperienceTimer from "../components/ExperienceTimer";
import { Image } from "astro:assets";
import me from "../assets/images/me.jpg";
---

<BaseLayout
  title="Rey ‚Äî Home"
  description="Reynaldi Wong - DevOps Engineer"
>
  <div class="balcom-container">
    
    <div style="text-align: center; margin-bottom: 2rem; font-size: 0.9rem; font-weight: 600; color: var(--primary-color);" class="animate-left delay-100">
      Reynaldi Wong
    </div>

    <!-- Split Hero -->
    <section class="balcom-hero-split">
      <div class="balcom-hero-text animate-left delay-200">
        <h1>
