---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const alienPosts = allPosts.filter(post => post.data.category === "alien");
const regularPosts = allPosts.filter(post => post.data.category !== "alien");
---

<BaseLayout title="Blog" description="My personal blog">
	<section class="blog-container">
        <div class="header-container animate-left">
            <h1 class="section-heading">Blog</h1>
            <a href="/" class="back-link">‚Üê Back to Home</a>
        </div>

        {alienPosts.length > 0 && (
            <div class="category-section animate-left delay-100">
                <h2 class="category-heading">üëΩ I Don't Speak Alien</h2>
                <ul class="post-list">
                    {alienPosts.map((post) => (
                        <li class="animate-left">
                            <a href={`/blog/${post.slug}/`}>
                                {post.data.heroImage && (
                                    <div class="card-image-wrapper">
                                        <Image src={post.data.heroImage} alt="" class="card-hero-image" width={720} height={360} />
                                    </div>
                                )}
                                <div class="card-content">
                                    <div class="post-header">
                                        <h3 class="title">{post.data.title}</h3>
                                        <span class="post-date">
                                            {post.data.pubDate.toLocaleDateString('en-us', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric',
                                            })}
                                        </span>
                                    </div>
                                    <p class="description">{post.data.description}</p>
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        )}

        {regularPosts.length > 0 && (
            <div class="category-section animate-left delay-200">
                <h2 class="category-heading">Latest Posts</h2>
                <ul class="post-list">
                    {regularPosts.map((post) => (
                        <li class="animate-left">
                            <a href={`/blog/${post.slug}/`}>
                                {post.data.heroImage && (
                                    <div class="card-image-wrapper">
                                        <Image src={post.data.heroImage} alt="" class="card-hero-image" width={720} height={360} />
                                    </div>
                                )}
                                <div class="card-content">
                                    <div class="post-header">
                                        <h3 class="title">{post.data.title}</h3>
                                        <span class="post-date">
                                            {post.data.pubDate.toLocaleDateString('en-us', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric',
                                            })}
                                        </span>
                                    </div>
                                    <p class="description">{post.data.description}</p>
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        )}
	</section>
</BaseLayout>

<style>
    .blog-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 4rem 1rem;
    }
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 3rem;
    }
    .section-heading {
        font-size: 2.5rem;
        margin: 0;
        color: #fff;
    }
    .category-section {
        margin-bottom: 4rem;
    }
    .category-heading {
        font-size: 1.5rem;
        color: var(--primary-color, #fff);
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .back-link {
        color: var(--secondary-text, #888);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }
    .back-link:hover {
        color: #fff;
    }
    .post-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }
    .post-list li {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        transition: transform 0.2s, background 0.2s;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    .post-list li:hover {
        transform: translateY(-2px);
        background: rgba(255, 255, 255, 0.05);
    }
    .post-list li a {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 0;
    }
    
    .card-image-wrapper {
        width: 100%;
        height: 180px;
        overflow: hidden;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .card-hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .post-list li:hover .card-hero-image {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    .title {
        font-size: 1.25rem;
        margin: 0;
        font-weight: 600;
        line-height: 1.3;
    }
    .post-date {
        font-size: 0.85rem;
        color: var(--secondary-text, #888);
        font-family: monospace;
        white-space: nowrap;
    }
    .description {
        margin: 0;
        color: var(--secondary-text, #ccc);
        font-size: 0.95rem;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .header-container {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
            margin-bottom: 2rem;
        }
        .post-list {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        .card-image-wrapper {
            height: 120px;
        }
    }
</style>
